  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Remote Run",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "app.py",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-reload",
        "-p",
        "8050"
      ],
      "jinja": true,
      "preLaunchTask": "Shutdown led-matrix-api service"
    }
  ]
}